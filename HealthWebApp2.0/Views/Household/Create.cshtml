@using HealthWebApp2._0.Models.HouseholdProfile
@model HealthWebApp2._0.Models.HouseholdProfile.HouseholdProfileCreateModel


@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-controller="Household" asp-action="Create" method="post">
    <div class="form-horizontal">
        <h4>Create New Household</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="form-group">
                <label asp-for="ProfileId" class="col-md-2 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="ProfileId" class="form-control" />
                    <span asp-validation-for="ProfileId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="col-md-2 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="BarangayId" class="col-md-2 control-label">Barangay</label>
                <div class="col-md-4">
                    <select asp-for="BarangayId" class="form-control" asp-items="@ViewBag.BarangayID">
                        <option value="">-- Select Barangay --</option>
                    </select>
                    <span asp-validation-for="BarangayId" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CityId" class="col-md-2 control-label">City</label>
                <div class="col-md-4">
                    <select asp-for="CityId" class="form-control" asp-items="@ViewBag.CityID">
                        <option value="">-- Select City --</option>
                    </select>
                    <span asp-validation-for="CityId" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ProvinceId" class="col-md-2 control-label">Province</label>
                <div class="col-md-4">
                    <select asp-for="ProvinceId" class="form-control" asp-items="@ViewBag.ProvinceID">
                        <option value="">-- Select Province --</option>
                    </select>
                    <span asp-validation-for="ProvinceId" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="col-md-2 control-label"></label>
                <div class="col-md-4">
                    <textarea asp-for="Note" class="form-control"></textarea>
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>


    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts 
    {


        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    }
